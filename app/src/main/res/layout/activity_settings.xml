<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/difficultyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/difficulty_settings_label"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/difficultySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/difficultyLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/learningLanguageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learning_language_label"
        android:textSize="18sp"
        android:layout_below="@id/difficultySpinner"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/learningLanguageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learningLanguageLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/myLanguageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_language_label"
        android:textSize="18sp"
        android:layout_below="@id/learningLanguageSpinner"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/myLanguageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myLanguageLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/languageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_language_label"
        android:textSize="18sp"
        android:layout_below="@id/myLanguageSpinner"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/languageLabel"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/settingsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/settings_back_button_text"/>

</RelativeLayout>